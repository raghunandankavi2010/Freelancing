<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".SecondScreen" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="@drawable/thirdeye" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_rect"
        android:text="Welcome"
        android:textColor="#000000"
        android:gravity="center" />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_rect"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView1"
        android:layout_marginLeft="10dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="One moment getting your location"
        android:textColor="#000000"
        android:gravity="center" />
  	</LinearLayout>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="10dp"
        android:background="@drawable/round_rect"
        android:text="One we get yout location we start streaming activity that is happening around you!. Be more aware now, unlock ThirdEye."
        android:textColor="#000000"
        android:gravity="center" />
    		<LinearLayout
		    android:id="@+id/ll3"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:layout_marginTop="21dp"
		    android:orientation="horizontal"
		    android:paddingBottom="20dp" >

			<Button
			    android:id="@+id/button3"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="0dp"
			    android:text="Tab1" />

			<Button
			    android:id="@+id/button4"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:text="Tab2" />

			<Button
			    android:layout_width="wrap_content"
			    android:layout_height="50dp"
			    android:layout_marginLeft="5dp"
			    android:background="@drawable/round_rect"
			    android:text="Preference" />
			<Button
			    android:id="@+id/logout"
			    android:layout_width="wrap_content"
			    android:layout_height="50dp"
			    android:layout_marginLeft="5dp"
			    android:background="@drawable/round_rect"
			    android:text="Logout" />
		

	</LinearLayout>

</LinearLayout>
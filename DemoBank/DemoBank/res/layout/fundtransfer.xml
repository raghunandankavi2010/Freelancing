<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:orientation="vertical"
  android:background="@drawable/bg">
    <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_horizontal" android:text="Fund Transfer" android:textSize="22sp" android:textColor="#012529"></TextView>
    <ImageView android:id="@+id/imageView11" android:src="@drawable/myaccount" android:layout_width="fill_parent" android:fitsSystemWindows="false" android:scaleType="fitXY" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_height="120dp"></ImageView>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_marginLeft="5dp" android:layout_marginTop="2dp" android:layout_width="fill_parent" android:background="#CDCEC7" android:layout_marginRight="5dp" android:baselineAligned="true" android:layout_height="wrap_content">
        <TextView android:layout_height="wrap_content" android:id="@+id/textView2" android:text="From Account" android:textColor="#012529" android:layout_margin="5dp" android:layout_gravity="center" android:layout_width="110dp"></TextView>
        <TextView android:layout_height="wrap_content" android:id="@+id/textView3" android:textColor="#73422C" android:layout_margin="5dp" android:background="#ffffff" android:layout_gravity="center" android:gravity="right" android:paddingBottom="2dp" android:paddingRight="10dp" android:paddingTop="2dp" android:layout_width="143dp"></TextView>
        <Button android:background="@drawable/plus" android:layout_height="wrap_content" android:id="@+id/bt" android:layout_weight="0.0" android:layout_width="wrap_content" android:layout_margin="5dp" android:layout_gravity="center"></Button>
    </LinearLayout>
    <LinearLayout android:id="@+id/LinearLayout01" android:layout_marginLeft="5dp" android:layout_marginTop="2dp" android:baselineAligned="true" android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="#CDCEC7" android:layout_marginRight="5dp">
        <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:id="@+id/TextView01" android:layout_margin="5dp" android:textColor="#012529" android:text="To Account" android:layout_width="110dp"></TextView>
        <TextView android:paddingBottom="2dp" android:layout_gravity="center" android:background="#ffffff" android:layout_height="wrap_content" android:paddingRight="10dp" android:gravity="right" android:id="@+id/TextView02" android:layout_margin="5dp" android:paddingTop="2dp" android:textColor="#73422C" android:layout_width="143dp"></TextView>
        <Button android:layout_gravity="center" android:layout_height="wrap_content" android:layout_margin="5dp" android:background="@drawable/plus" android:layout_weight="0.0" android:layout_width="wrap_content" android:id="@+id/bt1"></Button>
    </LinearLayout>
    <LinearLayout android:id="@+id/LinearLayout02" android:layout_marginLeft="5dp" android:layout_marginTop="2dp" android:baselineAligned="true" android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="#CDCEC7" android:layout_marginRight="5dp">
        <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:id="@+id/TextView04" android:layout_margin="5dp" android:textColor="#012529" android:text="Amount" android:layout_width="110dp"></TextView>
        <EditText android:id="@+id/et1" android:padding="3dp" android:layout_margin="5dp" android:textSize="15sp" android:numeric="integer" android:layout_height="35dp" android:layout_width="145dp" android:cursorVisible="true" android:focusableInTouchMode="true" android:focusable="true"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/LinearLayout03" android:layout_marginLeft="5dp" android:layout_marginTop="2dp" android:baselineAligned="true" android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="#CDCEC7" android:layout_marginRight="5dp">
        <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:id="@+id/TextView06" android:layout_margin="5dp" android:textColor="#012529" android:text="Date" android:layout_width="110dp"></TextView>
        <TextView android:paddingBottom="2dp" android:layout_gravity="center" android:background="#ffffff" android:layout_height="wrap_content" android:paddingRight="10dp" android:gravity="right" android:layout_margin="5dp" android:paddingTop="2dp" android:textColor="#73422C" android:id="@+id/dateDisplay" android:layout_width="143dp"></TextView>
        <Button android:layout_gravity="center" android:layout_height="wrap_content" android:layout_margin="5dp" android:background="@drawable/plus" android:layout_weight="0.0" android:layout_width="wrap_content" android:id="@+id/pickDate"></Button>
    </LinearLayout>
    <LinearLayout android:id="@+id/LinearLayout04" android:layout_marginLeft="5dp" android:layout_marginTop="2dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="#CDCEC7" android:layout_marginRight="5dp" android:baselineAligned="false">
        <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:id="@+id/TextView03" android:layout_margin="5dp" android:layout_width="110dp" android:textColor="#012529" android:text="Remarks"></TextView>
        <EditText android:cursorVisible="false" android:id="@+id/EditText01" android:padding="3dp" android:layout_margin="5dp" android:textSize="15sp" android:layout_height="100dp" android:layout_width="177dp" android:layout_marginRight="3dp" android:focusable="true"></EditText>
    </LinearLayout>
    <Button android:gravity="right" android:layout_height="wrap_content" android:id="@+id/b1" android:text="Transfer" android:textColor="#000000" android:layout_width="wrap_content"></Button>

</LinearLayout>
